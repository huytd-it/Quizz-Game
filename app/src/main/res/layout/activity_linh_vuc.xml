<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout"/>

        <TextView
            android:id="@+id/textView13"
            style="@style/tvContentMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Điểm: 5000"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTimeLife"
            android:layout_width="110dp"
            android:layout_height="110dp"
            style="@style/tvTitle"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="15"
            android:textColor="@color/red"
            android:textSize="50dp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView17"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn lĩnh vực"
            style="@style/tvContentMedium" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvField"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                style="@style/BasicTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="Yukihuy"
                android:textColor="#ffffff"
                android:textSize="20dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                style="@style/BasicTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2000"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_gravity="center"

                android:src="@drawable/small_diamond" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>